# Generated by Puppet
LoadPlugin mysql

<Plugin mysql>
  <Database "<%= @database %>" >
    Host "<%= @host %>"
    User "<%= @username %>"
    Password "<%= @password %>"
    Port "<%= @port %>"
    <% if @masterstats == true -%>
    MasterStats true
    <% end -%>
    <% if @slavestats == true -%>
    SlaveStats true
    <% end -%>
    <% if @slavenotifications == true -%>
    SlaveNotifications true
    <% end -%>
  </Database>
</Plugin>
